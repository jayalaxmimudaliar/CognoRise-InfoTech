<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/result"
        android:layout_marginBottom="16dp"

        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/keypad"
        android:layout_marginBottom="5dp"
        android:text="0"
        android:id="@+id/result"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="64dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#BEC5CA"
        android:id="@+id/keypad"
        >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"


        >

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:backgroundTint="#DF385F"
            android:text="C"
            android:textSize="32dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:id="@+id/clear"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:backgroundTint="#6F817E"
            android:text="("
            android:textSize="32dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:id="@+id/open_brac"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:backgroundTint="#6F817E"
            android:text=")"
            android:textSize="32dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:id="@+id/close_brac"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:backgroundTint="#1F42AC"
            android:text="/"
            android:textSize="32dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:id="@+id/divide"
            />



    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
           >

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="7"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_7"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="8"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_8"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="9"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_9"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1F42AC"
                android:text="*"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/multiply"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="4"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_4"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="5"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_5"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="6"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_6"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1F42AC"
                android:text="-"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/minus"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
           >

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="1"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_1"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="2"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_2"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="3"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_3"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1F42AC"
                android:text="+"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/plus"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#DF385F"
                android:text="AC"
                android:textSize="20dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/all_clear"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="0"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_0"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1FAC90"
                android:text="."
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_dot"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1F42AC"
                android:text="="
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:id="@+id/button_equal"
                />



        </LinearLayout>




    </LinearLayout>





</RelativeLayout>